{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "jsx": "preserve",
    "outDir": "app/dist",
    "rootDir": "./app",
    "types": ["node", "jest"]
  },
  "include": ["app/src/**/*.ts"],
  "exclude": ["node_modules"]
}
